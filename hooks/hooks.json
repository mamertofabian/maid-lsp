{
  "description": "MAID LSP hooks: auto-install on session start",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/install_maid_lsp.sh",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
